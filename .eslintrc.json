{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:all",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "max-len": ["error",120],
    "quotes": ["error","single"],
    "semi": ["error","always"],
    "padded-blocks": ["error",{"blocks":"never"}],
    "object-curly-newline": ["error",{"ObjectExpression":"always","ObjectPattern":"never"}],
    "quote-props": ["error","as-needed"],
    "space-before-function-paren": ["error","never"],
    "one-var": ["error","never"],
    "no-ternary": [0],
    "class-methods-use-this": [0],
    "no-alert": [0],
    "dot-location": ["error","property"],
    "func-style": [0,"declaration",{"allowArrowFunctions": true}],
    "sort-imports": [0],
    "require-jsdoc": [0],
    "valid-jsdoc": [0],
    "arrow-body-style": [0],
    "object-shorthand": [0],
    "no-magic-numbers": [0],
    "sort-keys": [0],
    "indent": ["error",4,{"SwitchCase":1}],
    "linebreak-style": ["error", "windows"]
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "createClass": "createReactClass",
      // Regex for Component Factory to use, default to "createReactClass"
      "pragma": "React",
      // Pragma to use, default to "React"
      "version": "15.0",
      // React version, default to the latest React stable release
      "flowVersion": "0.53"
      // Flow version
    },
    "propWrapperFunctions": [
      "forbidExtraProps"
    ]
    // The names of any functions used to wrap the propTypes object, such as `forbidExtraProps`. If this isn't set, any propTypes wrapped in a function will be skipped.
  }
}
